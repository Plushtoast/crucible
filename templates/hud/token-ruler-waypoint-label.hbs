<div class="waypoint-label {{cssClass}}">
    {{#if action.icon}}
    <i class="icon {{action.icon}}"></i>
    {{else if action.label}}
    <label class="action-label">{{localize action.label}}</label>
    {{/if}}

    <span class="total-measurement">{{distance.total}}{{distance.units}}</span>
    {{#if distance.delta}}
    <span class="delta-measurement">({{distance.delta}})</span>
    {{/if}}
    <span class="total-cost">[{{cost.total}}{{cost.units}}]</span>

    {{#if hasElevation}}
    <i class="icon fa-solid {{elevationIcon}}"></i>
    <span class="total-elevation">{{totalElevation}} {{units}}</span>
    {{#if deltaElevation}}
    <span class="delta-elevation">({{deltaElevation}})</span>
    {{/if}}
    {{/if}}
    {{#if secret}}
    <i class="icon fa-solid fa-eye-slash"></i>
    {{/if}}
</div>
