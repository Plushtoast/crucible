<div class="action line-item" data-action-id="{{action.id}}">
    <img class="icon" src="{{action.img}}" alt="{{action.name}}">
    <div class="title">
        <h4>{{action.name}}</h4>
    </div>
    {{#if isEditable}}
    <div class="controls">
        <a class="button icon fa-solid fa-edit" data-action="actionEdit" data-tooltip="TALENT.Actions.Edit"></a>
        <a class="button icon fa-solid fa-trash" data-action="actionDelete" data-tooltip="TALENT.Actions.Delete"></a>
    </div>
    {{/if}}
    <div class="description">{{{action.description}}}</div>
</div>
