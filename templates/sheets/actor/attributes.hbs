<section class="tab sheet-body flexcol {{tabs.attributes.id}} {{tabs.attributes.cssClass}}"
         data-tab="{{tabs.attributes.id}}" data-group="{{tabs.attributes.group}}">

    <div class="attribute-section resources flexrow">
        <h3>Resources</h3>
        <div class="resource health flexcol" style="{{resources.health.cssPct}}">
            <h4 class="label above">{{resources.health.label}}</h4>
            <div class="pool flexrow">
                {{formInput fields.resources.fields.health.fields.value value=resources.health.value type="number"}}
                <span class="sep">/</span>
                <span class="total value">{{resources.health.max}}</span>
            </div>
            <div class="pool flexrow">
                {{formInput fields.resources.fields.wounds.fields.value value=resources.wounds.value type="number"}}
                <span class="sep">/</span>
                <span class="total value">{{resources.wounds.max}}</span>
            </div>
            <h4 class="label below">{{resources.wounds.label}}</h4>
        </div>
        <div class="pools flexcol"></div>
        <div class="resource morale flexcol" style="{{resources.morale.cssPct}}">
            <h4 class="label above">{{resources.morale.label}}</h4>
            <div class="pool flexrow">
                {{formInput fields.resources.fields.morale.fields.value value=resources.morale.value type="number"}}
                <span class="sep">/</span>
                <span class="total value">{{resources.morale.max}}</span>
            </div>
            <div class="pool flexrow">
                {{formInput fields.resources.fields.madness.fields.value value=resources.madness.value type="number"}}
                <span class="sep">/</span>
                <span class="total value">{{resources.madness.max}}</span>
            </div>
            <h4 class="label below">{{resources.madness.label}}</h4>
        </div>
    </div>

    <div class="attribute-section abilities">
        <h3>Abilities</h3>
        {{#each abilityScores as |ability|}}
        <div class="ability {{ability.id}} {{ability.type}} flexcol" data-ability="{{ability.id}}">
            <h4 class="label">{{ability.label}}</h4>
            {{#unless ../sectionLocks.abilities}}
            <div class="controls flexcol">
                <a class="control fa-solid fa-caret-up {{#unless ability.canIncrease}}inactive{{/unless}} increase"
                   title="Ability Increase" data-action="abilityIncrease"></a>
                <a class="control fa-solid fa-caret-down {{#unless ability.canDecrease}}inactive{{/unless}} decrease"
                   title="Ability Decrease" data-action="abilityDecrease"></a>
            </div>
            {{/unless}}
            <span class="input score">{{ability.value}}</span>
        </div>
        {{/each}}
    </div>

    <div class="attribute-section defenses flexrow">
        <h3>Defenses</h3>
    </div>

    <div class="attribute-section resistances flexrow">
        <h3>Resistances</h3>
    </div>

</section>
