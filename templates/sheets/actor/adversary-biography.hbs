<section class="tab flexcol {{tabs.biography.id}} {{tabs.biography.cssClass}}"
         data-tab="{{tabs.biography.id}}" data-group="{{tabs.biography.group}}">
    <div class="sheet-section flexrow appearance">
        <h3 data-action="expandSection">
            {{fields.details.fields.biography.fields.appearance.label}}
            <i class="fa-solid fa-chevron-right" inert></i>
        </h3>
        {{formInput fields.details.fields.biography.fields.appearance value=source.system.details.biography.appearance
                    enriched=biography.appearance toggled=true}}
    </div>
    <div class="sheet-section flexcol public-biography">
        <h3 data-action="expandSection">
            {{fields.details.fields.biography.fields.public.label}}
            <i class="fa-solid fa-chevron-right" inert></i>
        </h3>
        {{formInput fields.details.fields.biography.fields.public value=source.system.details.biography.public
                    enriched=biography.public toggled=true}}
    </div>
    <div class="sheet-section flexcol private-biography">
        <h3 data-action="expandSection">
            {{fields.details.fields.biography.fields.private.label}}
            <i class="fa-solid fa-chevron-right" inert></i>
        </h3>
        {{formInput fields.details.fields.biography.fields.private value=source.system.details.biography.private
                    enriched=biography.private toggled=true}}
    </div>
</section>
