<section class="tab sheet-body flexcol {{tabs.usage.cssClass}}"
         data-group="{{tabs.usage.group}}" data-tab="{{tabs.usage.id}}">
    <fieldset>
        <legend>{{fields.tags.label}}</legend>
        {{formGroup fields.tags label="" value=action.tags options=tags}}
    </fieldset>

    <fieldset>
        <legend>{{fields.cost.label}}</legend>
        {{formGroup fields.cost.fields.action value=action.cost.action}}
        {{formGroup fields.cost.fields.focus value=action.cost.focus}}
        {{formGroup fields.cost.fields.heroism value=action.cost.heroism}}
        {{formGroup fields.cost.fields.weapon value=action.cost.weapon}}
    </fieldset>
</section>
