<section class="tab sheet-body standard-form scrollable {{tabs.config.cssClass}}"
         data-tab="{{tabs.config.id}}" data-group="{{tabs.config.group}}">

    <fieldset {{fieldDisabled}}>
        <legend>{{localize "BACKGROUND.SHEET.IDENTITY"}}</legend>
        {{formField fields.identifier value=system.identifier}}
        {{formField fields.ui.fields.color value=system.ui.color}}
    </fieldset>

    <fieldset class="item-properties" {{fieldDisabled}}>
        <legend>{{fields.skills.label}}</legend>
        {{formInput fields.skills value=source.system.skills input=skillsInput}}
        <p class="hint">{{fields.skills.hint}}</p>
    </fieldset>
</section>
