<section class="tab sheet-body standard-form scrollable {{tabs.config.cssClass}}"
         data-tab="{{tabs.config.id}}" data-group="{{tabs.config.group}}">
    <fieldset {{fieldDisabled}}>
        <legend>{{localize "ITEM.SHEET.TYPE"}}</legend>
        {{formField fields.identifier value=source.system.identifier}}
        {{formField fields.category value=source.system.category}}
        {{formField fields.quality value=source.system.quality}}
        {{formField fields.enchantment value=source.system.enchantment}}
    </fieldset>

    <fieldset {{fieldDisabled}}>
        <legend>{{localize "ARMOR.SHEET.DEFENSES"}}</legend>
        <div class="form-group slim defense">
            <label>{{fields.armor.label}}</label>
            <div class="form-fields">
                <label>{{fields.armor.fields.base.label}}</label>
                {{formInput fields.armor.fields.base value=source.system.armor.base type="number"}}
                <label>{{localize "ARMOR.SHEET.ARMOR_BONUS"}}</label>
                <input type="number" value="{{item.system.armor.bonus}}" readonly>
            </div>
        </div>
        <div class="form-group slim defense">
            <label>{{localize "ARMOR.SHEET.DODGE"}}</label>
            <div class="form-fields">
                <label>{{localize "ARMOR.SHEET.DODGE_BASE"}}</label>
                <input type="number" value="{{item.system.dodge.base}}" readonly>
                <label>{{localize "ARMOR.SHEET.DODGE_SCALING"}}</label>
                <input type="number" value="{{item.system.dodge.scaling}}" readonly>
            </div>
        </div>
    </fieldset>

    <fieldset class="item-properties" {{fieldDisabled}}>
        <legend>{{fields.properties.label}}</legend>
        {{formField fields.properties value=item.system.properties widget=propertiesWidget}}
    </fieldset>

    <fieldset class="item-equipment" {{fieldDisabled}}>
        <legend>{{localize "ITEM.SHEET.EQUIPMENT"}}</legend>
        {{formField fields.equipped value=source.system.equipped}}
        {{formField fields.broken value=source.system.broken}}
        {{formField fields.quantity value=source.system.quantity classes="slim"}}
        {{formField fields.weight value=source.system.weight classes="slim"}}
        {{formField fields.price value=source.system.price classes="slim"}}
        {{formField scaledPriceField value=item.system.price classes="slim" disabled=true}}
        {{#if requiresInvestment}}
        {{formField fields.invested value=source.system.invested}}
        {{/if}}
    </fieldset>
</section>
