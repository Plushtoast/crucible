<section class="tab sheet-body standard-form scrollable {{tabs.config.cssClass}}"
         data-tab="{{tabs.config.id}}" data-group="{{tabs.config.group}}">

    <fieldset {{fieldDisabled}}>
        <legend>{{localize "BACKGROUND.SHEET.IDENTITY"}}</legend>
        {{formGroup fields.identifier value=system.identifier}}
    </fieldset>

    <fieldset class="form-group abilities" {{fieldDisabled}}>
        <legend>{{fields.abilities.label}} <span class="sum"></span></legend>
        <div class="form-fields">
            {{#each abilities as |a|}}
            <label>
                {{formInput a.field value=a.value type="number"}}
                {{a.label}}
            </label>
            {{/each}}
        </div>
        <p class="hint">{{fields.abilities.hint}}</p>
    </fieldset>
    <fieldset {{fieldDisabled}}>
        <legend>{{localize "ARCHETYPE.SHEET.SKILLS"}}</legend>
        {{formGroup fields.skills value=source.system.skills stacked=true type="checkboxes"}}
    </fieldset>
</section>
